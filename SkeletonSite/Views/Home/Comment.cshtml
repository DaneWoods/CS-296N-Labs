@model SkeletonSite.Models.Comment
@{
    Layout = "_Layout";
}
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

<div class="panel panel-success">
    <div class="panel-heading"><h4>Below here you can type a comment to a story</h4></div>
    <div class="panel-body">
        <div><h2>You are writing a comment for: @ViewBag.Story</h2></div>
        <form class="p-4" asp-controller="Home" asp-action="Comment" asp-antiforgery="true" method="post">
            <div asp-validation-summary="ModelOnly" style="background-color: red"></div>
            <div>
                <div class="form-group">
                    <input type="hidden" value="@ViewBag.Story" name="storyTitle" />
                    <label asp-for="Text">Subject:</label>
                    <span asp-validation-for="Text"></span>
                    <input class="form-control" asp-for="Text" />
                    <label asp-for="Rating">Rating:</label>
                    <span asp-validation-for="Rating"></span>
                    <input class="form-control" asp-for="Rating" style=" float: left" />/10
                    <div class="text-md-left">
                        <button class="btn btn-primary" type="submit">Submit comment</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

